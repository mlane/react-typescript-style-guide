{
  "name": "react-typescript-style-guide",
  "version": "1.0.0",
  "description": "An opinionated React + TypeScript style guide for writing scalable, maintainable, and consistent code.",
  "author": "Marcus Lane",
  "license": "MIT",
  "homepage": "https://react-typescript-style-guide.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/mlane/react-typescript-style-guide.git"
  },
  "keywords": [
    "react",
    "typescript",
    "style-guide",
    "eslint",
    "best-practices",
    "frontend",
    "code-quality"
  ],
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "start": "astro preview",
    "format": "prettier --write .",
    "lint": "eslint . --ext .astro,.ts,.md --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "astro": "^5.3.0",
    "eslint": "^8.57.1",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@astrojs/mdx": "^4.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.30.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "prettier-plugin-astro": "^0.14.1",
    "vercel": "^41.2.0"
  },
  "lint-staged": {
    "*.astro": "eslint --fix",
    "*.md": "eslint --fix",
    "*.ts": "eslint --fix"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
